@model ProjectBoardWebApp.Models.WorkTask

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>WorkTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectID" class="control-label"></label>
                <select asp-for="ProjectID" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfProjects, "ProjectId", "ProjectName"))"></select>
                <span asp-validation-for="ProjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentTask" class="control-label"></label>
                <select asp-for="ParentTask" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfTasks, "TaskID", "TaskName"))"><option value="0">-- This is not a subtask.</option></select>
                <span asp-validation-for="ParentTask" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamID" class="control-label"></label>
                <input asp-for="TeamID" class="form-control" />
                <span asp-validation-for="TeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedID" class="control-label"></label>
                <select asp-for="AssignedID" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfUsers, "NormalizedUserName", "UserFullName"))"></select>
                <span asp-validation-for="AssignedID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDesc" class="control-label"></label>
                <textarea asp-for="TaskDesc" class="form-control"></textarea>
                <span asp-validation-for="TaskDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStarted" class="control-label"></label>
                <input asp-for="DateStarted" class="form-control" />
                <span asp-validation-for="DateStarted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCompleted" class="control-label"></label>
                <input asp-for="DateCompleted" class="form-control" />
                <span asp-validation-for="DateCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursEstimated" class="control-label"></label>
                <input asp-for="HoursEstimated" class="form-control" />
                <span asp-validation-for="HoursEstimated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursUsed" class="control-label"></label>
                <input asp-for="HoursUsed" class="form-control" />
                <span asp-validation-for="HoursUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
